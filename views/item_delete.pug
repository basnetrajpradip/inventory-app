extends layout

block content
  .content-container 
    .item-img
      img(src=item.imageUrl, alt="Image 1")
    .item-container
      h1.item-title #{title}
      .item-description #{item.description}
      .item-price Price: $#{item.price}
      .item-stock In-Stock: #{item.stock}
      .item-category Category: #[a(href=item.category.url) #{item.category.name}]
  .delete-container
    if !item.authorized
      h2.delete-info You don't have permisson to delete this default item.You're authorized to delete only user created items.
    else   
      h2.delete-info Do you really want to delete this Item?
      form(method='POST')
        div.form-group 
          input#bookid.form-control(type='hidden',name='itemid',value=item._id)
        .delete-btn-container
          button.delete-btn(type='submit') Delete
          a(href=item.url).cancel-btn Cancel
